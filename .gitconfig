    email = karl.yngve+git@gmail.com

[core]
    pager = cat
    editor = vim

[color]
    ui = auto
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[alias]
    gl  = log -16 --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
    gll = log     --color=always --all --graph --topo-order --pretty='format: %Cgreen%h%Creset %s%Cred%d%Creset%n'
    pull = pull --ff-only
    merge = merge --no-ff
    up = merge --ff-only
    ci = commit
    co = checkout
    stat = status
    st = status

[merge]
    tool = splice

[mergetool "splice"]
    cmd = "gvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
