[pager]
pager = more
ignore = version

[extensions]
hgext.convert =
hgext.graphlog =
hgext.extdiff =
pager =
color =
hgk =
fetch =
progress =
rebase =

[hgk]
path=~/scripts/bin/hgk

[email]
from = "Karl Yngve Lervåg <karl.yngve@lervag.net>"
method = /usr/bin/sendmail
charsets = iso-8859-1

[ui]
username = Karl Yngve Lervåg <karl.yngve@lervag.net>
editor = vim
merge = vimdiff
ssh = ssh -C
commitsubrepos = False

[color]
status.modified = magenta
status.added    = green bold
status.removed  = red bold
status.deleted  = red bold black_background
status.ignored  = black
status.unknown  = 
status.clean    = black bold

[merge-tools]
vimdiff.executable = gvim
vimdiff.args = -d $base $local $output $other +close +close

[diff]
git = True

[alias]
show = log --color=always --stat -r
slog = log --template '{date|shortdate}: {desc|firstline}\n'
glog = glog --template 'changeset:   {rev}:{node|short} {tags}\nsummary: {desc|firstline|fill68|tabindent|tabindent}\n\n'
