method = smtp

[smtp]
host = smtp.gmail.com
port = 587
username = karl.yngve@gmail.com
tls = True

[extensions]
hgext.convert =
hgext.graphlog =
hgext.extdiff =
pager =
color =
hgk =
fetch =
progress =
rebase =
transplant =

[pager]
pager = more
ignore = version

[progress]
delay = 1.0

[hgk]
path=~/scripts/bin/hgk

[color]
status.modified = cyan
status.added    = green
status.removed  = red
status.deleted  = yellow bold underline
status.unknown  = magenta bold underline
status.ignored  = black bold
status.clean    = black bold
#status.modified = magenta
#status.added    = green bold
#status.removed  = red bold
#status.deleted  = red bold black_background
#status.ignored  = black
diff.diffline = none
diff.extended = cyan
diff.file_a = red
diff.file_b = green
diff.hunk = yellow bold
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = white_background

[merge-tools]
threesome.executable = gvim
threesome.args = -f $base $local $other $output -c 'set co=177' \
                 -c 'ThreesomeInit'
threesome.premerge = keep
threesome.priority = 1

[diff]
git = True

[hostfingerprints]
bitbucket.org = 81:2b:08:90:dc:d3:71:ee:e0:7c:b4:75:ce:9b:6c:48:94:56:a1:fe

[alias]
show = log --color=always --stat -r
slog = log --template '{date|shortdate}: {desc|firstline}\n'
glog = glog --template 'changeset:   {rev}:{node|short} {tags}\nsummary: {desc|firstline|fill68|tabindent|tabindent}\n\n'
inout = summary --remote
? = summary
