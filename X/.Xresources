! Colors (solarized dark)
#define S_yellow  #b58900
#define S_orange  #cb4b16
#define S_red     #dc322f
#define S_magenta #d33682
#define S_violet  #6c71c4
#define S_blue    #268bd2
#define S_cyan    #2aa198
#define S_green   #859900
#define S_base03  #002b36
#define S_base02  #073642
#define S_base01  #586e75
#define S_base00  #657b83
#define S_base0   #839496
#define S_base1   #93a1a1
#define S_base2   #eee8d5
#define S_base3   #fdf6e3

! General terminal colors
*color0:  S_base02
*color1:  S_red
*color2:  S_green
*color3:  S_yellow
*color4:  S_blue
*color5:  S_magenta
*color6:  S_cyan
*color7:  S_base2
*color8:  S_base03
*color9:  S_orange
*color10: S_base01
*color11: S_base00
*color12: S_base0
*color13: S_violet
*color14: S_base1
*color15: S_base3

! Font settings
Xft.autohint:  true
Xft.antialias: true
Xft.hinting:   true
Xft.hintstyle: hintslight
Xft.rgba:      rgb
Xft.lcdfilter: lcddefault

! xterm settings
xterm*background:    S_base03
xterm*foreground:    S_base0
xterm*faceName:      xft:Inconsolata\\-g for Powerline:pixelsize=14,xft:Iosevka:style=light:pixelsize=16
xterm*dynamicColors: true
xterm*utf8:          2
xterm*eightBitInput: true
xterm*saveLines:     512

! urxvt settings
URxvt.termName:          xterm
URxvt.saveLines:         65535
URxvt.intensityStyles:   false
URxvt.internalBorder:    0
URxvt.allow_bold:        true
URxvt.font:              xft:Inconsolata\\-g for Powerline:pixelsize=14, \
                         xft:Iosevka:style=light:pixelsize=16
URxvt*letterSpace:       -1
URxvt.scrollBar:         false
URxvt.perl-ext-common:   default,matcher,resize-font
URxvt.url-launcher:      /usr/bin/google-chrome-beta
URxvt.matcher.button:    1
URxvt.pointerBlank:      true
URxvt*scrollTtyOutput:   false
URxvt*scrollWithBuffer:  true
URxvt*scrollTtyKeypress: true
URxvt.secondaryScreen:   1
URxvt.secondaryScroll:   0
URxvt*background:        S_base03
URxvt*foreground:        S_base0
URxvt*fading:            20
URxvt*fadeColor:         S_base03
URxvt*cursorColor:       S_base1
URxvt.iso14755:          false
URxvt.iso14755_52:       false

! xscreensaver settings
xscreensaver.mode:                          blank
xscreensaver.timeout:                       0:15:00
xscreensaver.lock:                          True
xscreensaver.lockTimeout:                   0:15:00
xscreensaver.passwdTimeout:                 0:00:30
xscreensaver.dpmsEnabled:                   False
xscreensaver.fade:                          False
xscreensaver.splash:                        False
xscreensaver.Dialog.headingFont:            *-*-bold-r-*-*-*-140-*-*-*-*-*
xscreensaver.Dialog.buttonFont:             *-*-medium-r-*-*-*-140-*-*-*-*-*
xscreensaver.Dialog.labelFont:              *-*-medium-r-*-*-*-140-*-*-*-*-*
xscreensaver.Dialog.passwdFont:             *-*-medium-r-*-*-*-140-*-*-*-*-*
xscreensaver.Dialog.background:             S_base03
xscreensaver.Dialog.foreground:             S_base3
xscreensaver.Dialog.topShadowColor:         S_base03
xscreensaver.Dialog.bottomShadowColor:      S_base03
xscreensaver.Dialog.Button.foreground:      S_base2
xscreensaver.Dialog.Button.background:      S_base1
xscreensaver.Dialog.text.foreground:        S_base03
xscreensaver.Dialog.text.background:        S_base3
xscreensaver.Dialog.internalBorderWidth:    0
xscreensaver.Dialog.borderWidth:            0
xscreensaver.passwd.thermometer.foreground: S_yellow
xscreensaver.passwd.thermometer.background: S_base3
xscreensaver.passwd.thermometer.width:      12
xscreensaver.passwd.heading.label:          Screen is locked
xscreensaver.passwd.body.label:
xscreensaver.passwd.uname:                  False

! Load local settings
#include ".Xlocal"
