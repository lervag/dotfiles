" Options
set autoupdategist
 
" Variable options
let scrollstep = 200
let searchalias g = "google"
let blacklists = ["http://feedly.com/*","https://feedly.com/*","https://mail.google.com/*","https://inbox.google.com/*","https://todoist.com/app*"]
 
" Mappings
map <Leader>x :restore<space>
map gb :buffer<Space>
map X :execute gTx<CR>
map u lastClosedTab
map a goToInput
unmap gR
map R reloadTabUncached
 
site '*://play.spotify.com/*' {
 call :pintab
}
 
site 'https://play.google.com/music/*' {
 call :pintab
}
