(if
  (is (application_name) "Vim")
  (begin
    (undecorate)
    (geometry (spawn_sync (str 'xwinposition ' (window_xid))))))

(if
  (is (application_name) "Spotify Premium - Linux Preview")
  (begin
    (undecorate)
    (set_workspace 4)
    (maximize)))

(if
  (and
    (is (application_name) "wfica")
    (is (window_name)      "wfica"))
  (begin
    (undecorate)
    (maximize)
    (set_workspace 4)))
