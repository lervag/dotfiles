[merge]
  tool = mydiff
  conflictStyle = diff3

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "mydiff"]
  cmd = xvim -f -d $LOCAL $MERGED $REMOTE -c "MergeMode"

[push]
  default = simple

[grep]
  extendedRegexp = true
