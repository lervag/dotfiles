[user]
  name = Karl Yngve Lerv√•g
  email = karl.yngve+git@gmail.com

[core]
  pager = less -XFR
  editor = vim
  excludesfile = ~/.dotfiles/gitignore
  quotepath = off

[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[color "status"]
  added = green
  changed = yellow bold
  untracked = red bold

[alias]
  ci = commit
  co = checkout
  st = status
  slog = log --decorate --graph --date=short --format=format:'%Cblue%h%Creset %Cgreen%ad (%ar)%C(bold yellow)%d%Creset%n        %C(white)%s%Creset%n        %an'
  lg = log --all -n 10 --decorate --graph --date=short --format=format:'%Cblue%h%Creset %Cgreen%ad (%ar)%C(bold yellow)%d%Creset%n        %C(white)%s%Creset%n        %an'

[diff]
  algorithm = patience

[merge]
  tool = mydiff
  conflictStyle = diff3

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "mydiff"]
  cmd = xvim -f -d $LOCAL $MERGED $REMOTE -c "MergeMode"

[push]
  default = simple

[grep]
  extendedRegexp = true
