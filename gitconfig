  name = Karl Yngve Lerv√•g
  email = karl.yngve+git@gmail.com

[core]
  pager = diff-so-fancy | less --tabs=4 -RFX
  editor = vim
  excludesfile = ~/.dotfiles/gitignore
  quotepath = off

[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[color "status"]
  added = green
  changed = yellow bold
  untracked = red bold

[alias]
  ci = commit
  co = checkout
  st = status
  lg  = log       --decorate --graph --date=short --format=format:'%Cblue%h%Creset %Cgreen%ad (%ar)%C(bold yellow)%d%Creset%n        %C(white)%s%Creset%n        %an'
  lga = log --all --decorate --graph --date=short --format=format:'%Cblue%h%Creset %Cgreen%ad (%ar)%C(bold yellow)%d%Creset%n        %C(white)%s%Creset%n        %an'

[commit]
  verbose = true

[diff]
  algorithm = patience
  indentHeuristic = true

[diff-so-fancy]
  markEmptyLines = false

[merge]
  tool = mydiff
  conflictStyle = diff3

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "mydiff"]
  cmd = xvim -f -d $LOCAL $MERGED $REMOTE -c "MergeMode"

[push]
  default = simple

[grep]
  extendedRegexp = true
