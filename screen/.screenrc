# Screen setup
# Karl Yngve Lerv√•g - 2013

# No annoying audible bell, please
vbell on
vbell_msg "Hey - something's ringing on %t (%n)"
activity "Hey - something's moving in %t(%n)"

# Start with screen number 1
bind c screen 1
bind  screen 1
bind 0 select 10
screen 1

# Don't display the copyright page
startup_message off

# Detach on hangup
autodetach on

# Number of lines in buffer and buffer scroll
scrollback 20000
termcapinfo xterm|xterms|xs|rxvt ti@:te@

# Clear screen after text editing
altscreen on

# If a window goes unresponsive, don't block the whole session waiting for it.
nonblock on

# The status line
caption always '%{k} %-w%{+b w}%n %t%{-}%+w'

# New keybindings
bindkey -k k5 prev
bindkey -k k6 next

# Reduce ESC delay
maptimeout 10
