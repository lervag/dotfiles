# Screen setup
# Karl Yngve Lerv√•g

# No annoying audible bell, please
vbell on
vbell_msg "Hey - something's ringing on %t (%n)"
activity "Hey - something's moving in %t(%n)"

# Don't display the copyright page
startup_message off

# Detach on hangup
autodetach on

# Number of lines in buffer and buffer scroll
defscrollback 10000
termcapinfo xterm* ti@:te@

# Clear screen after text editing
altscreen on

# If a window goes unresponsive, don't block the whole session waiting for it.
nonblock on

# The status line
caption always
caption string '%{kg}%H %{gk}:. %{G}%?%-w%?%{g}%n %t%{G}%?(%u)%?%?%+w%?%=%{b}.:%{kb} %Y-%m-%d %c'

# New keybindings
bindkey -k k5 prev
bindkey -k k6 next
