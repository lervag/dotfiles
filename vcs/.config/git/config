[user]
  name = Karl Yngve Lerv√•g
  email = karl.yngve+git@gmail.com

[init]
  defaultBranch = main

[core]
  pager = delta
  excludesfile = ~/.gitignore
  quotepath = off

[branch]
  sort = -committerdate

[delta]
  file-style = bold yellow
  file-decoration-style = bold yellow ul
  hunk-header-style = bold blue
  hunk-header-decoration-style = omit
  syntax-theme = Solarized (dark)

[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[color "status"]
  added = green
  changed = yellow bold
  untracked = red bold

[commit]
  verbose = true

[log]
  date = iso

[diff]
  algorithm = histogram
  indentHeuristic = true
  colorMoved = default

[difftool]
  prompt = false

[merge]
  tool = mydiff
  conflictStyle = zdiff3
  log = true
  ff = false

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "mydiff"]
  cmd = echo "NO! Please use this instead: git mt" && exit 1
  trustExitCode = true

[push]
  default = current
  autoSetupRemote = true
  followtags = true

[pull]
  ff = only

[grep]
  extendedRegexp = true

[rerere]
  enabled = true
  autoUpdate = true

[fetch]
  prune = true
  prunetags = true

[alias]
  mt = "!nvim +DiffviewOpen +tabonly +'let g:mergemode=1'"
  ci = commit
  co = checkout
  st = status
  lg  = log       --decorate --graph --date=short --format=format:'%Cblue%h%Creset %Cgreen%ad (%ar)%C(bold yellow)%d%Creset%n        %C(white)%s%Creset%n        %an'
  lga = log --all --decorate --graph --date=short --format=format:'%Cblue%h%Creset %Cgreen%ad (%ar)%C(bold yellow)%d%Creset%n        %C(white)%s%Creset%n        %an'
  changelog = log --first-parent --decorate --date=short --format=format:'%C(bold white)%s %Cblue%h%C(yellow)%d%Creset%n%b'
  list-local-branches = "!(git branch -vv | grep 'origin/.*: gone]' | awk '{print $1}' ; git branch --merged | cut -c 3- | grep -v 'main\\|master') | sort -u"
  rv-st = "!git diff --stat $(git merge-base HEAD \"${REVIEW_BASE:-master}\")"
  rv-all = "!git rv-one $(git rv-files)"
  rv-files = "!git diff --name-only $(git merge-base HEAD \"${REVIEW_BASE:-master}\")"
  rv-one = "!$EDITOR -p +\"tabdo silent Gdiffsplit ${REVIEW_BASE:-master} | wincmd H\" +WinResize"

[include]
  path = config-local

[includeIf "hasconfig:remote.*.url:git@github.com:thermophys/**"]
  path = config-thermophys
