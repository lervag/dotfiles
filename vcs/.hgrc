commitsubrepos = False
fallbackencoding = utf-8

[trusted]
users = asmunder,aursand,morteham,geirsk,halvorlu,magnugje,trac,andreag,pedera,svendm,owil

[extensions]
extdiff =
pager =
color =
hgk =
progress =
rebase =
transplant =
record =
bookmarks =
shelve =
histedit =
hgext.convert =
churn =
strip =

[pager]
pager = LESS='FSRX' less
attend = annotate, cat, diff, export, lg, log, qdiff, in, out, shelve

[progress]
delay = 1.0

[hgk]
path=~/scripts/bin/hgk

[color]
status.modified = cyan
status.added    = green
status.removed  = red
status.deleted  = yellow bold underline
status.unknown  = magenta bold underline
status.ignored  = black bold
status.clean    = black bold
diff.diffline = none
diff.extended = cyan
diff.file_a = red
diff.file_b = green
diff.hunk = yellow bold
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = white_background
desc.here = bold blue_background
log.branch = cyan 
log.node = blue
log.summary = white
log.date = green
log.description = white
log.tag = blue
log.bookmark = green
log.activebookmark = green bold underline

[merge-tools]
vim.executable = xvim
vim.args = -f -d $local $output $other +MergeMode
vim.premerge = keep-merge3
vim.priority = 1

[diff]
git = True

[hostfingerprints]
bitbucket.org = 24:9c:45:8b:9c:aa:ba:55:4e:01:6d:58:ff:e4:28:7d:2a:14:ae:3b

[alias]
show = log --color=always --stat -r
lg = log -G --style compact
inout = summary --remote
? = summary
blame = annotate --user -c
tickets = !trac-ticket
